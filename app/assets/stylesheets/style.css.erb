@font-face { font-family: 'MyriadPro-Regular'; src: url("<%= asset_path 'fonts/' %>MyriadPro-Regular.otf"); } 
body{
	font-family: Arial, Sans-Serif;
	background: #171717;
	color: #fff;
}

a, a:visited{
	text-decoration: none;
	color: #666;
}

a:hover{
	color: #666;

} 


header{ 
	margin: 0;  
	background: #131313; 
	height: 30px;
	padding: 0 20px;
	border-bottom: 1px solid #333;
	font-size: 13px;
	color: #666;
}

header h1 a{
	font-size: 20px;
	font-family: 'MyriadPro-Regular', Helvetica, Arial, Sans-Serif;
	font-weight: normal; 
	margin: 2px 0 0 0;
	font-weight:bold;
	float: left;  
	color: #fff !important;
}

.red{ color: #ba141a !important; }
 
  
nav{
	float: right;
	margin: 7px 0 0 0;
} 

nav a, nav a:visited{
	color: #FFBA00;
}

nav a:hover{
	text-decoration: underline;
	color: #FFBA00;
}

#container{  
	padding: 0 60px; 
	margin: 60px 0 0 0;
	position: relative;
} 
 
#container h1{
	font-size: 46px;
	font-family: 'MyriadPro-Regular', Arial, Sans-Serif;
	font-weight: normal;
	text-align: center; 
	color: #999;
	margin: 0 0 40px 0; 
}

#container h2{	
	font-size: 32px;
	font-family: 'MyriadPro-Regular', Arial, Sans-Serif;
	font-weight: normal; 
	color: #fff;
	margin: 0 0 40px 0; 
}
 
#container h2 span{
	color: #666;
}

footer{
	display: none !important;
	clear: both;
	overflow: hidden; 
	width: 100%;
	text-align: center;
	margin: 30px 0;
	font-size: 11px;
	color: #aaa;
}
  

form input, form text-area{
	padding: 5px; 
	border: 1px solid #222;
	color: #fff;
	font-size: 16px;
	font-family: Arial, Sans-Serif;
	background: #111;
}

form input:focus, form text-area:focus, form input:active{
	background: #141414;
	border: 1px solid #2a2a2a; 
	outline: none !important;
}

form label{
	margin: 0 0 10px 0; 
	font-size: 16px; 
	color: #888;
	font-family: Arial, Sans-Serif;
	text-transform: none;
}

form .field{
	margin: 0 0 15px 0;
} 

table td, table th{
	padding: 5px;
}

.hidden{ display: none; }

#account_name_list{
	list-style: none;
	margin: 40px 0; 
	font-size: 18px;
	color: #666;
}

#account_name_list li{
	font-family: 'MyriadPro-Regular', Arial, Sans-Serif; 
	margin: 0 0 2px 0;
}

#account_name_list li .account_name{
	color: #FFBA00;
}

#account_name_list li .realm{
	color: #888;
}
